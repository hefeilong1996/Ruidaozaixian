<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DCDCDC"
    tools:context="dinpiao.tentent.app.myapplication.MainActivity">

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/viewPager">

    </android.support.v4.view.ViewPager>

    <RadioGroup


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGroup">

        <RadioButton
            style="@style/rbStyle"
            android:drawableTop="@drawable/ic_3d_rotation_black_18dp"
            android:text="@string/post"
            android:checked="true"
            android:id="@+id/radioButton_post" />

        <RadioButton
            style="@style/rbStyle"
            android:drawableTop="@drawable/ic_accessibility_black_18dp"
            android:id="@+id/radioButton_hot"
            android:text="@string/hot"/>

        <RadioButton
            style="@style/rbStyle"
            android:drawableTop="@drawable/ic_account_balance_black_18dp"
            android:text="@string/team"
            android:id="@+id/radioButton_team" />

    </RadioGroup>


</LinearLayout>